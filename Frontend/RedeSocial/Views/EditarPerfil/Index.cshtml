@{
    ViewData["Title"] = "EditarPerfil";
}

@model UsuarioAlterarModel

<head>
    <style>
        .form-container {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form-box {
            border-radius: 2rem;
            background-color: var(--bg-main);
            min-width: 40%;
            max-width: 1000px;
            display: flex;
            flex-direction: column;
            align-items: stretch;
            gap: 1rem;
            padding: 2rem 1rem;
            justify-content: space-between;
        }

            .form-box * {
                color: #fff;
            }

        .form-box-header {
            color: #fff;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
            margin: 3rem 0 1rem 0;
        }

        .form-box button {
            margin-top: 3rem;
            border: 0;
            border-radius: 0.5rem;
            text-align: center;
            padding: 0.5rem;
            width: 100%;
            background: #000;
            font-weight: 600;
        }

        .input-box {
            display: block;
            position: relative;
            border: 1px solid #fff;
            border-radius: 0.5rem;
            padding: 0.5rem;
        }

            .input-box > label {
                position: absolute;
                top: -0.5rem;
                left: 0.75rem;
                font-size: 0.75rem;
                background-color: var(--bg-main);
                padding: 0 0.25rem;
                font-weight: 600;
                color: #fff;
            }

            .input-box > input {
                background-color: transparent;
                padding: 0 0.25rem;
                outline: none;
                border: 0;
                width: 100%;
                color: #fff;
            }

        .customselect {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            background: url('data:image/svg+xml;charset=US-ASCII,<svg xmlns="http://www.w3.org/2000/svg" width="4" height="5"><path fill="none" stroke="%23333" stroke-width="1.1" d="M0 0l2 2 2-2"/></svg>') no-repeat right 10px center;
            background-color: #fff;
            background-size: 10px 10px;
            background-origin: content-box;
            color: #333;
        }

            .customselect option {
                color: #333;
                background-color: #fff;
            }

        select::-ms-expand {
            display: none;
        }

        .customselect:focus {
            border-color: #66afe9;
            outline: none;
            box-shadow: 0 0 5px rgba(102, 175, 233, 0.6);
        }
    </style>
</head>

<div class="form-container">
    <form id="register-form" action="/EditarPerfil/Atualizar" method="post" class="form-box" enctype="multipart/form-data">
        @Html.ValidationSummary()
        <div class="form-box-header">
            <h2>Quer editar sua conta?</h2>
            <p>BORA LÁ!</p>
        </div>

        @if (ViewBag.Usuario != null)
        {
            var user = (RedeSocial.Models.UsuarioModel)ViewBag.Usuario;
            <div class="input-box">
                <label id="usuariocadastra.nome" name="usuariocadastra.nome">Nome</label>
                <input name="nome" type="text" value="@user.Nome" />
            </div>
            <div class="input-box">
                <label id="usuariocadastra.sobrenome" name="usuariocadastra.sobrenome">Sobrenome</label>
                <input name="sobrenome" type="text" value="@user.Sobrenome" />
            </div>
            <div class="input-box">
                <label id="usuariocadastra.telefone" name="usuariocadastra.telefone">Telefone</label>
                <input name="telefone" type="number" value="@user.Telefone" />
            </div>
            <div class="input-box">
                <label id="usuariocadastra.bio" name="usuariocadastra.bio">Biografia</label>
                <input name="bio" type="text" value="@user.Bio" />
            </div>
            <div class="input-box">
                <label id="usuariocadastra.dataComemorativa" name="usuariocadastra.dataComemorativa">Data de nascimento</label>
                <input name="datacomemorativa" type="date" value="@user.DataComemorativa.ToString("yyyy-MM-dd")" />
            </div>
            <div class="input-box">
                <label id="usuariocadastra.email" name="usuariocadastra.email">Email</label>
                <input name="email" type="email" value="@user.Email" />
            </div>
            <div class="input-box">
                <label id="usuariocadastra.documento" name="usuariocadastra.documento">Documento</label>
                <input name="documento" type="number" value="@user.Documento" />
            </div>
            <div class="input-box">
                <label id="usuariocadastra.cidade" name="usuariocadastra.cidade">Cidade</label>
                <input type="text" class="form-control" name="cidade" value="@user.Cidade">
            </div>
            <div class="input-box">
                <label id="usuariocadastra.Uf" name="usuariocadastra.Uf">Estado</label>
                <select class="customselect"
                        id="uf"
                        name="uf"
                        asp-for="Uf"
                        asp-items="@Html.GetEnumSelectList<RedeSocial.Backend.Models.EstadosBrasilModel>()">
                </select>
            </div>
            <div class="input-box">
                <label id="usuariocadastra.tipoPessoa" name="usuariocadastra.tipoPessoa">Estado</label>
                <select class="customselect" id="tipoPessoa" name="tipoPessoa">
                    <option value="0" selected="0">Física</option>
                    <option value="1" selected="1">Jurídica</option>
                </select>
            </div>
            <div class="input-box">
                <label id="usuariocadastra.fotoperfil" name="usuariocadastra.fotoperfil">Foto de Perfil</label>
                <input type="file" name="fotoperfil" asp-for="FotoPerfil" class="form-control" id="fotoperfil" accept="image/*">
            </div>
        }
        <button type="submit">ATUALIZAR</button>
    </form>
</div>
