@{
    ViewData["Title"] = "EditarPerfil";
}

@model UsuarioAlterarModel

<head>
    <style>
        .form-container {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 2rem 0;
        }
    </style>
</head>

<div class="form-container">
    <form id="update-user" action="/EditarPerfil/Atualizar" method="post" class="form-box" enctype="multipart/form-data">
        @Html.ValidationSummary()
        <div class="form-box-header">
            <h2>Quer editar sua conta?</h2>
            <p>BORA LÁ!</p>
        </div>

        @if (ViewBag.Usuario != null)
        {
            var user = (RedeSocial.Models.UsuarioModel)ViewBag.Usuario;
            <div class="input-box">
                <label id="usuariocadastra.nome" name="usuariocadastra.nome">Nome</label>
                <input name="nome" type="text" value="@user.Nome" />
            </div>
            <div class="input-box">
                <label id="usuariocadastra.sobrenome" name="usuariocadastra.sobrenome">Sobrenome</label>
                <input name="sobrenome" type="text" value="@user.Sobrenome" />
            </div>
            <div class="input-box">
                <label id="usuariocadastra.telefone" name="usuariocadastra.telefone">Telefone</label>
                <input name="telefone" type="number" value="@user.Telefone" />
            </div>
            <div class="input-box">
                <label id="usuariocadastra.bio" name="usuariocadastra.bio">Biografia</label>
                <input name="bio" type="text" value="@user.Bio" />
            </div>
            <div class="input-box">
                <label id="usuariocadastra.dataComemorativa" name="usuariocadastra.dataComemorativa">Data de nascimento</label>
                <input name="datacomemorativa" type="date" value="@user.DataComemorativa.ToString("yyyy-MM-dd")" />
            </div>
            <div class="input-box">
                <label id="usuariocadastra.email" name="usuariocadastra.email">Email</label>
                <input name="email" type="email" value="@user.Email" />
            </div>
            <div class="input-box">
                <label id="usuariocadastra.documento" name="usuariocadastra.documento">Documento</label>
                <input name="documento" type="number" value="@user.Documento" />
            </div>
            <div class="input-box">
                <label id="usuariocadastra.cidade" name="usuariocadastra.cidade">Cidade</label>
                <input type="text" class="form-control" name="cidade" value="@user.Cidade">
            </div>
            <div class="input-box">
                <label id="usuariocadastra.Uf" name="usuariocadastra.Uf">Estado</label>
                <select id="uf" name="uf" asp-for="Uf" asp-items="@Html.GetEnumSelectList<RedeSocial.Backend.Models.EstadosBrasilModel>()"></select>
            </div>
            <div class="input-box">
                <label id="usuariocadastra.tipoPessoa" name="usuariocadastra.tipoPessoa">Estado</label>
                <select class="customselect" id="tipoPessoa" name="tipoPessoa">
                    <option value="0" selected="0">Física</option>
                    <option value="1" selected="1">Jurídica</option>
                </select>
            </div>
            <div class="input-box">
                <label id="usuariocadastra.fotoperfil" name="usuariocadastra.fotoperfil">Foto de Perfil</label>
                <input type="file" name="fotoperfil" asp-for="FotoPerfil" class="form-control" id="fotoperfil" accept="image/*">
            </div>
        }
        <button type="submit">ATUALIZAR</button>
    </form>
</div>
