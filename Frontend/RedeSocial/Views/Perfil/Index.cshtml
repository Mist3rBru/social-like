@{
    ViewData["Title"] = "Perfil";
}

<head>
    <style>
        .user-feed {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-auto-rows: auto;
            gap: 1rem;
            margin: 2rem auto;
        }

            .user-feed img {
                height: auto;
                border: 0.25rem solid white;
            }

        .profileavatar {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .profileavatar img {
                border-radius: 50%;
                height: 8rem;
                width: 8rem;
            }

        .profileavatar-border {
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid var(--bg-main);
            border-radius: 50%;
            padding: 2px;
        }

        .profileName {
            font-size: 25px;
            font-weight: bold;
            margin-left: 20px;
            font-family: cursive;
        }

        .profileDescription{
            display:flex;
            flex-direction: column;
        }

        .profileBio{
            font-size: 20px;
            font-weight: bold;
            margin-left: 20px;
            font-family: cursive;
            margin-top: 1rem;
        }

        .profileDate{
            font-size: 15px;
            font-weight: bold;
            margin-left: 20px;
            font-family: cursive;
            margin-top: 1rem;
        }

        .profileContainer {
            background-color: #fff;
            padding: 1.5rem;
            display: flex;
            justify-content: space-between
        }

        .buttonProfile {
            border: 0;
            border-radius: 0.5rem;
            text-align: center;
            padding: 0.5rem;
            width: 115px;
            background: #000;
            font-weight: 600;
            color: white;
        }

    </style>
</head>

<div class="main">
    <form action="/Perfil/Editar">
    @if (ViewBag.Usuario != null)
    {
        var user = (RedeSocial.Models.UsuarioModel)ViewBag.Usuario;
       
        <div class="profileContainer">
            <div>
                <a href="/perfil" class="profileavatar">
                    <img src="data:image/jpeg;base64,@user.FotoPerfil" alt="ProfilePic" />
                    <div class="profileDescription">
                        <p class="profileName">@user.Nome</p>
                        <p class="profileDate">@user.DataComemorativa.ToString("dd/MM/yyyy")</p>
                    </div>
                </a>
                <p class="profileBio">
                    @user.Bio
                </p>
            </div>
            <div>
                <button type="submit" class="buttonProfile">
                    Editar perfil
                </button>
            </div>
        </div>
    }
    </form>


    <div class="user-feed">
        <a href="/post"><img src="~/img/gato.jpg" alt="" /></a>
        <a href="/post"><img src="~/img/gato.jpg" alt="" /></a>
        <a href="/post"><img src="~/img/gato.jpg" alt="" /></a>
        <a href="/post"><img src="~/img/gato.jpg" alt="" /></a>
        <a href="/post"><img src="~/img/gato.jpg" alt="" /></a>
    </div>
</div>
