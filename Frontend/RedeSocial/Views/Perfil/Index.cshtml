@{
    ViewData["Title"] = "Perfil";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <style>

        .main {
            background: #5d0096;
            width: 100%;
        }

        .user-feed {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-auto-rows: auto;
            gap: 1rem;
            margin: 2rem auto;
        }

            .user-feed img {
                height: auto;
                border: 0.25rem solid white;
            }

        .profileavatar {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .profileavatar-border {
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid var(--bg-main);
            border-radius: 50%;
            padding: 2px;
        }

        .profileDescription {
            display: flex;
            flex-direction: column;
            margin-left: 20px;
        }

        .profile-img {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2px;
            border: 2px solid #5d0096;
            border-radius: 50%;
        }

            .profile-img img {
                border-radius: 50%;
                height: 6rem;
                width: 6rem;
            }

        .profileName {
            font-size: 2.5rem;
            font-weight: bold;
        }

        .profileBio {
            font-size: 1.2rem;
        }

        .profileDate {
            font-size: 0.8rem;
            margin-top: 0.2rem;
        }

        .profileContainer {
            background-color: #f3f2fd;
            display: flex;
            padding: 1rem;
            justify-content: space-between;
            border-radius: 0.5rem;
            box-shadow: 0 0 4px #333;
        }

        .profile-button-box {
            display: flex;
            gap: 0.5rem;
            margin-top: auto;
        }

        .buttonProfile {
            border: 1px solid #ccc;
            border-radius: 0.5rem;
            text-align: center;
            padding: 0.5rem;
            font-weight: 600;
            margin-top: auto;
            transition: border 150ms;
        }

            .buttonProfile:hover {
                border-color: #333;
            }

        .post-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-auto-rows: auto;
            margin: 2rem auto;
            gap: 1rem;
        }

        .profile-post {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 260px;
            padding: 0.5rem;
            border: 2px solid #333;
            box-shadow: #121214;
            border-radius: 0.5rem;
            background: #fff;
            transition: border 50ms;
        }


            .profile-post:hover {
                border: 4px solid #555;
            }

        .profile-post-image {
            height: 240px;
        }

        .profile-post-description {
            padding: 0.5;
        }
    </style>
</head>
<body>
    <div class="main">
        <form action="/Perfil/Editar">
            @if (ViewBag.Usuario != null)
            {
                var user = (RedeSocial.Models.UsuarioModel)ViewBag.Usuario;
                var currentId = ViewBag.CurrentId;

                <div class="profileContainer">
                    <div class="profileavatar">
                        <div class="profile-img">
                            <img src="data:image/jpeg;base64,@user.FotoPerfil" alt="ProfilePic" />
                        </div>
                        <div class="profileDescription">
                            <p class="profileName">@user.Nome</p>
                            <p class="profileBio">@user.Bio</p>
                            <p class="profileDate">@user.DataComemorativa.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                    @if (user.Id.ToString() == currentId)
                    {
                        <div class="profile-button-box">
                            <a href="/EditarPerfil">
                                <button type="button" class="buttonProfile">
                                    Editar perfil
                                </button>
                            </a>
                            <a href="/CriarPublicacao">
                                <button type="button" class="buttonProfile">
                                    Criar Publicação
                                </button>
                            </a>
                        </div>
                    }
                </div>
            }
        </form>

        <div class="post-container">
            @if (ViewBag.Publicacoes != null)
            {
                var publicacoes = (List<RedeSocial.Models.PublicacaoModel>)ViewBag.Publicacoes;
                for (int i = 0; i < publicacoes.Count; i++)
                {
                    var publicacao = publicacoes[i];
                    <a href="/Post/@publicacao.Id" class="profile-post">
                        @if (publicacao.Midias.Count > 0)
                        {
                            <img class="profile-post-image" src="data:@publicacao.Midias[0].ContentType;base64,@publicacao.Midias[0].FileContents" alt="" />
                        }
                        <p class="profile-post-description">@publicacao.Descricao</p>
                    </a>
                }
            }
        </div>
    </div>
</body>
</html>