@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<head>
    <link rel="stylesheet" href="~/css/reset.css" type="text/css" />
    <link rel="stylesheet" href="~/css/global.css" type="text/css" />
    <style>
        .form-box {
            border-radius: 2rem;
            background-color: var(--bg-main);
            min-width: 35%;
            display: flex;
            flex-direction: column;
            align-items: stretch;
            gap: 1rem;
            padding: 2rem 1rem;
        }

            .form-box * {
                color: #fff;
            }

        .form-box-header {
            color: #fff;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
            margin: 3rem 0 1rem 0;
        }

        .form-box button {
            margin-top: auto;
            border: 0;
            border-radius: 0.5rem;
            text-align: center;
            padding: 0.5rem;
            width: 100%;
            background: #000;
            font-weight: 600;
        }

        .input-box {
            display: block;
            position: relative;
            border: 1px solid #fff;
            border-radius: 0.5rem;
            padding: 0.5rem;
        }

            .input-box > label {
                position: absolute;
                top: -0.5rem;
                left: 0.75rem;
                font-size: 0.75rem;
                background-color: var(--bg-main);
                padding: 0 0.25rem;
                font-weight: 600;
                color: #fff;
            }

            .input-box > input {
                background-color: transparent;
                padding: 0 0.25rem;
                outline: none;
                border: 0;
                width: 100%;
                color: #fff;
            }
    </style>
</head>

<div style="margin: 0 auto; width: 90vw;">
    <div style="display: flex; flex-direction: column; align-items: end">
        <h1 style="margin: 1rem 0">RedeSocial</h1>
        <div style="display: flex; gap: 0.5rem">
            <div style="display: flex; flex-direction: column; gap: 1rem">
                <h2 style="text-align: center">RedeSocial</h2>
                <img src="../Images/img/rocket-like.png" alt="" />
                <p>
                    LOREM IPSUM IS SIMPLY DUMMY TEXT OF THE PRINTING LOREM AND TYPESETTING INDUSTRY. LOREM IPSUM HAS BEEN THE INDUSTRY'S STANDARD DUMMY TEXT EVER SINCE THE 1500S
                </p>
            </div>
            <form id="login-form" class="form-box" >
                <div class="form-box-header">
                    <h2>Já possui conta?</h2>
                    <p>FAÇA SEU LOGIN:</p>
                </div>
                <div class="input-box">
                    <label for="">Email</label>
                    <input type="text" />
                </div>
                <div class="input-box">
                    <label for="">Senha</label>
                    <input type="text" />
                </div>
                <button type="submit" >ENTRAR</button>
            </form>
            <form id="register-form"  class="form-box">
                <div class="form-box-header">
                    <h2>Quer criar sua conta?</h2>
                    <p>VAMOS COMEÇAR!</p>
                </div>
                <div class="input-box">
                    <label for="">Nome</label>
                    <input type="text" />
                </div>
                <div class="input-box">
                    <label for="">Email</label>
                    <input type="text" />
                </div>
                <div class="input-box">
                    <label for="">Senha</label>
                    <input type="text" />
                </div>
                <button type="submit">CADASTRAR</button>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById("login-form").addEventListener("submit", e => {
        e.preventDefault()
        window.location.href = "/feed"
    })
    document.getElementById("register-form").addEventListener("submit", e => {
        e.preventDefault()
        window.location.href = "/feed"
    })
</script>