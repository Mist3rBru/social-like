@{
    ViewData["Title"] = "CriarPublicacao";
}


<head>
    <style>
        .form-container {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 2rem 0;
        }
    </style>
</head>

<div class="form-container">
    <form id="register-form" action="/CriarPublicacao/Criar" method="post" class="form-box" enctype="multipart/form-data">
        @Html.ValidationSummary()
        <div class="form-box-header">
            <h2>Bora criar um post novo?</h2>
            <p>BORA LÁ!</p>
        </div>


        <div class="input-box">
            <label id="publicacao.descricao" name="publicacao.descricao">Legenda</label>
            <input name="Descricao" type="text" />
        </div>

        <div class="input-box">
            <label id="publicacao.Midias" name="publicacao.Midias">Selecione sua foto</label>
            <input type="file" id="Midias" name="Midias">
        </div>

        <button type="submit">Publicar</button>
    </form>
</div>
